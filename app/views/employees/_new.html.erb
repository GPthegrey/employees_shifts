<div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card rounded-3 shadow mt-3 bg-primary">
        <div class="card-body">
          <%= simple_form_for(@employee) do |f| %>
            <%= f.input :name, label: 'Nombre', input_html: { class: 'form-control bg-primary-dark border-primary-darker' }%>
            <%= f.input :date_of_birth, label: 'Fecha de nacimiento', input_html: { class: 'form-control bg-primary-dark border-primary-darker' } %>
            <%= f.input :position, label: 'Puesto', input_html: { class: 'form-control bg-primary-dark border-primary-darker' } %>
            <%= f.input :email, label: 'Mail', input_html: { class: 'form-select bg-primary-dark border-primary-darker' } %>
            <%= f.input :phone, label: 'Telefono', input_html: { class: 'form-select bg-primary-dark border-primary-darker' } %>
            <%= f.input :photos, as: :file, input_html: { multiple: true, class: 'form-control bg-primary-dark border-primary-darker' }, label: 'Fotos' %>
            <%= f.button :submit, @employee.persisted? ? 'Actualizar' : 'Crear', class: 'd-block w-50 m-auto btn btn-secondary-light border-primary-dark my-2' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
