<div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card rounded-3 shadow mt-3 bg-primary">
        <div class="card-body">
          <%= simple_form_for(@bank_holiday) do |f| %>
            <%= f.input :name, label: 'Nombre', input_html: { class: 'form-control bg-primary-dark border-primary-darker' }%>
            <%= f.input :date, label: 'Fecha del feriado', input_html: { class: 'form-control bg-primary-dark border-primary-darker' } %>
            <%= f.button :submit, @bank_holiday.persisted? ? 'Actualizar' : 'Crear', class: 'd-block w-50 m-auto btn btn-secondary-light border-primary-dark my-2' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
